@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="signup-form">
    <form asp-controller="Account" asp-action="Create" method="post">
        <h2>Create Account</h2>
        <p class="lead">It's free and hardly takes more than 30 seconds.</p>
        <div class="text-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="Name"></span>
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" asp-for="Name" class="form-control" name="name" placeholder="First Name" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="Lastname"></span>
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" asp-for="Lastname" class="form-control" name="lastname" placeholder="Last Name" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="Username"></span>
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" asp-for="Username" class="form-control" name="username" placeholder="Username" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="Password"></span>
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input type="password" asp-for="Password" class="form-control" name="password" placeholder="Password" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                    <i class="fa fa-check"></i>
                </span>
                <input type="password" asp-for="ConfirmPassword" class="form-control" name="ConfirmPassword" placeholder="ConfirmPassword" required="required">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Sign Up</button>
        </div>
        <p class="small text-center">By clicking the Sign Up button, you agree to our <br><a href="#">Terms &amp; Conditions</a>, and <a href="#">Privacy Policy</a>.</p>
    </form>
    <div class="text-center">Already have an account? <a href="@Url.Action("Login","Account")">Login here</a></div>
</div>