@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="signup-form">
    <form asp-controller="Writers" asp-action="Login" method="post">
        <h2>Login Account</h2>
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" asp-for="Username" class="form-control" name="Username" placeholder="Username" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input type="password" asp-for="Password" class="form-control" name="password" placeholder="Password" required="required">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
        </div>
    </form>
    <div class="text-center">You don't have an account?  <a href="@Url.Action("Create","Account")">Register</a></div>
</div>
